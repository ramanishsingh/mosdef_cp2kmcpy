        RMBOND        0.074
        RMDIHEDRAL        3.0
        RMROT        26.0
        RMTRANS        0.38
      &END MOL_DISPLACEMENTS
    &END MAX_DISPLACEMENTS
    &MOVE_PROBABILITIES
      &BOX_PROBABILITIES
        PMHMC_BOX        1.0
        PMVOL_BOX        1.0
      &END BOX_PROBABILITIES
      &MOL_PROBABILITIES
        PMAVBMC_MOL        1
        PMROT_MOL        1.0
        PMSWAP_MOL        1.0
