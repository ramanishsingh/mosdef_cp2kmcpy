      PMHMC        0.0
      PMSWAP        0.0
      PMTRAION        0.2
      PMTRANS        0.6
      PMVOLUME        0.02
    &END MOVE_PROBABILITIES
    &MOVE_UPDATES
      IUPTRANS        100
      IUPVOLUME        100
    &END MOVE_UPDATES
    ENSEMBLE        TRADITIONAL
    ETA        0.0
    IPRINT        1
    LBIAS        TRUE
    LSTOP        FALSE
    NMOVES        8
    NSTEP        1
    NSWAPMOVES        640
